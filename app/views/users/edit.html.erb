<div class="authform">
  <h3>Editar Usu√°rio</h3>
  <%= form_for(@user) do |f| %>
  
    <div class="form-group">
      <%= f.label 'Nome' %>
      <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label 'Campus' %>
      <%= f.text_field :campus, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label 'Status da conta:' %>
      <%= f.select :approved, [['Aceita', true], ['Pendente', false]], class: 'form-control' %>
    </div>
    
    <%= f.submit 'Salvar', :class => 'button right' %>
  <% end %>
</div>
